<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <CheckBox
        android:id="@+id/toto_liste_singleview_done"
        android:focusable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp" />
    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toto_liste_singleview_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:paddingLeft="5dp"
        android:layout_toRightOf="@id/toto_liste_singleview_done"/>
    <TextView
        android:id="@+id/toto_liste_singleview_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingTop="35dp"
        android:paddingLeft="40dp" />
    <Switch xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toto_liste_singleview_important"
        android:focusable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true" />
</RelativeLayout>