<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/totoDetailName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:hint="Todo Name"
        android:padding="15dp"/>
    <EditText xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/totoDetailDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="110dp"
        android:textSize="20sp"
        android:hint="Todo Description"
        android:padding="15dp"/>
    <CheckBox
        android:id="@+id/totoDetailDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Todo done?"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:layout_marginLeft="20dp"/>
    <Switch
        android:id="@+id/totoDetailImportant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="    important?"
        android:layoutDirection="rtl"
        android:textSize="20sp"
        android:padding="15dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time"
        android:textSize="20sp"
        android:padding="15dp"
        android:textAlignment="center" />

    <View android:background="@color/black"
        android:layout_width = "match_parent"
        android:layout_height="1dp"
        android:padding="20dp"/>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <Button
        android:id="@+id/totoDetailDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/spinnerStyle"
        android:textSize="20sp"
        android:layout_marginLeft="15dp"/>

    <Button
        style="?android:attr/spinnerStyle"
        android:id="@+id/totoDetailTime"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:textSize="20sp"/>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation_detailview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        app:itemBackground="@color/colorPrimary"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:menu="@menu/detail_navigation_items" />
</RelativeLayout>


</LinearLayout>