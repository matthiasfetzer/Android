<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/contact_list_singleview_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:paddingLeft="5dp"
        android:layout_toRightOf="@id/contact_list_singleview_image"/>

    <ImageView
        android:id="@+id/contact_list_singleview_image"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <ImageButton
        android:id="@+id/contact_list_singleview_email_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/contact_list_singleview_sms_button"
        android:layout_centerVertical="true"
        android:paddingRight="10dp"
        android:background="@color/transparent"
        android:src="@drawable/ic_email" />

    <ImageButton
        android:id="@+id/contact_list_singleview_sms_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/contact_list_singleview_delete_button"
        android:layout_centerVertical="true"
        android:paddingRight="10dp"
        android:background="@color/transparent"
        android:src="@drawable/ic_sms" />

    <ImageButton
        android:id="@+id/contact_list_singleview_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="5dp"
        android:background="@color/transparent"
        android:src="@drawable/ic_delete_black" />

</RelativeLayout>